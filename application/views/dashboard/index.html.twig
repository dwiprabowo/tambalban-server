{% block script %}
    <script>
        $(document).ready(function() {
            $('#table').dataTable( {
                "processing": true,
                "serverSide": true,
                "ajax": '{{ base_url('api/markers?datatables=true') }}',
                "columns": [
                    { "data": "no" },
                    { "data": "id" },
                    { "data": "lat" },
                    { "data": "lng" },
                ],
                "columnDefs": [{ "targets": [0], "sortable": false }],
                "filter": false,
            } );
            $('#table tbody').on('click', 'tr', function () {
                var name = $('td', this).eq(0).text();
            } );
        } );
    </script>
{% endblock %}